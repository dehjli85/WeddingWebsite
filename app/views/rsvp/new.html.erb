<% if flash[:notice] %>
	<% if flash[:notice].eql?('Error Saving!') %>
		<div class="alert alert-danger" role="alert" style="text-align:center;">  
	  		<%= flash[:notice] %>
		</div>
	<% end %>
	<% if flash[:notice].eql?('Successfully Saved!') %>
		<div class="alert alert-success" role="alert">  
	  		<%= flash[:notice] %>
		</div>
	<% end %>
<% end %>

<div class="col-md-offset-3 col-md-6" style="text-align:center">
	<form class="form-horizontal" role="form" action="/rsvp/saveNewRsvp">
		<div class="form-group">
			<label for="inputFirstName" class="col-sm-4 control-label">First Name:</label>
			<div class="col-sm-8">
			<input type="search" class="form-control" id="inputFirstName" placeholder="(i.e. Katie)" name="inputFirstName">
			</div>
		</div>
		<div class="form-group">
			<label for="inputLastName" class="col-sm-4 control-label">Last Name:</label>
			<div class="col-sm-8">
			<input type="search" class="form-control" id="inputLastName" placeholder="(i.e. Wang)" name="inputLastName">
			</div>
		</div>
		<div class="form-group">
			<label for="inputConfirmationCode" class="col-sm-4 control-label">Confirmation Code:</label>
			<div class="col-sm-8">
				<input type="search" class="form-control" id="inputConfirmationCode" placeholder="(i.e. 5115)" name="inputConfirmationCode">
			</div>
		</div>		
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-primary">Add</button>
				<a type="submit" class="btn btn-default" href="/rsvp/viewAllRsvp">Cancel</a>
			</div>
		</div>
	</form>
</div>


